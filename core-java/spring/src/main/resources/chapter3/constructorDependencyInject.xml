<?xml version="1.0" encoding="UTF-8" ?>
<beans xmlns="http://www.springframework.org/schema/beans"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.springframework.org/schema/beans 
      http://www.springframework.org/schema/beans/spring-beans.xsd">

  <!-- 通过构造器参数索引方式依赖注入 -->	
  <bean id="byIndex" class="org.spring.chapter3.HelloImpl3">
  	<constructor-arg index="0" value="Hello World byIndex!" />
  	<constructor-arg index="1" value="1" />
  </bean>	
  
  <!-- 通过构造器参数类型方法注入 -->
  <bean id="byType" class="org.spring.chapter3.HelloImpl3">
  	<constructor-arg type="java.lang.String" value="Hello World byType!" />
  	<constructor-arg type="int" value="2" />
  </bean>	
  
  <!-- 通过参数名称依赖注入 -->
  <bean id="byName" class="org.spring.chapter3.HelloImpl3">
  	<constructor-arg name="message" value="Hello World byName!" />
  	<constructor-arg name="index" value="3" />
  </bean>	

</beans>